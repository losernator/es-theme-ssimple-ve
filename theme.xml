			<origin>0 0</origin>
			<pos>0.110 0.55</pos>
			<size>0.35 0</size>
			<path>./assets/sysinfobox.svg</path>
			<color>ffffff</color>
		</image>
		<!-- ..games available-->
		<text name="systemInfo">
			<fontPath>./assets/font_sub.ttf</fontPath>
			<fontSize>0.012</fontSize>
			<alignment>left</alignment>
			<backgroundColor>00000000</backgroundColor>
			<color>fafafa</color>
			<origin>0 0</origin>
			<pos>0.140 0.539</pos>
			<size>0.980 0.050</size>
		</text>
		<!-- Controller -->
		<image name="systemController" extra="true">
			<tile>false</tile>
			<pos>0.75 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.4 0.2</maxSize>
			<path>./assets/systems/${system.theme}_controller.svg</path>
			<color>ffffff</color>
		</image>
		<!-- Selected system title -->
		<image name="system" extra="true">
			<tile>false</tile>
			<zIndex>41</zIndex>
			<origin>0.5 0.5</origin>
			<pos>0.29 0.480</pos>
			<maxSize>0.45 0.10</maxSize>
			<path>./assets/systems/${system.theme}.svg</path>
			<color>ffffff</color>
		</image>
		<!-- System menu -->
		<helpsystem name="help">
			<pos>0.5 0.98</pos>
			<origin>0.5 0.5</origin>
			<textColor>9d9d9d</textColor>
			<iconColor>9d9d9d</iconColor>
			<fontPath>./assets/font_sub.ttf</fontPath>
			<fontSize>0.012</fontSize>
		</helpsystem>
	</view>
	<!--Game list menu -->
