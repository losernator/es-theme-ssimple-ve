<theme>
	<formatVersion>4</formatVersion>
	<feature supported="carousel">
		<view name="system">
			<carousel name="systemcarousel">
				<type>vertical</type>
				<origin>0.5 0.5</origin>
				<pos>0.29 0.485</pos>
				<size>1 1</size>
				<logoScale>1</logoScale>
				<logoSize>0.45 0.100</logoSize>
				<color>00000000</color>
				<maxLogoCount>5</maxLogoCount>
			</carousel>
		</view>
	</feature>
	<view name="system">
		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>f4f4f4</color>
			<path>./assets/bg_white.png</path>
		</image>
		<image name="vignetteOverlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>1 1</size>
			<path>./assets/vignettev.png</path>
		</image>
		<image name="carouselShadow" extra="true">
			<tile>false</tile>
			<pos>0 0.2</pos>
			<origin>0 0</origin>
			<size>1 0.6</size>
			<path>./assets/carouselshadow.png</path>
		</image>
		<image name="carouselBG" extra="true">
			<tile>false</tile>
			<pos>0 0.4</pos>
			<origin>0 0</origin>
			<size>1 0.2</size>
			<path>./assets/backgrounds/${system.theme}.png</path>
		</image>
