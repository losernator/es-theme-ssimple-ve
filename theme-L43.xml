<theme>
	<formatVersion>4</formatVersion>
	<feature supported="carousel">
		<view name="system">
			<carousel name="systemcarousel">
				<type>vertical</type>
				<origin>0.5 0.5</origin>
				<pos>0.359 0.476</pos>
				<size>1 1</size>
				<logoScale>1</logoScale>
				<logoSize>0.291 0.200</logoSize>
				<color>00000000</color>
				<maxLogoCount>3</maxLogoCount>
			</carousel>
		</view>
	</feature>
	<view name="system">
		<image name="background" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>f4f4f4</color>
			<path>./assets/bg_white.png</path>
		</image>
		<image name="vignetteOverlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>1 1</size>
			<path>./assets/vignettev.png</path>
		</image>
		<image name="carouselShadow" extra="true">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./assets/carouselshadow.png</path>
		</image>
		<image name="carouselBG" extra="true">
			<tile>false</tile>
			<pos>0 0.3333333</pos>
			<origin>0 0</origin>
			<size>1 0.333333</size>
			<path>./assets/backgrounds/${system.theme}.png</path>
		</image>
		<image name="carouselpattern" extra="true">
			<tile>false</tile>
			<pos>0 0.33333333</pos>
			<origin>0 0</origin>
			<size>1 0.33333333</size>
			<path>./assets/patternw.png</path>
			<color>0000001f</color>
		</image>
		<image name="logo">
			<path>./assets/systems/${system.theme}.svg</path>
			<color>0000005a</color>
		</image>
		<!-- ..games available-->
		<image name="systminfoBox" extra="true">
			<tile>false</tile>
			<origin>0 0</origin>
			<pos>0.252 0.587</pos>
			<size>0.235 0</size>
			<path>./assets/sysinfobox.svg</path>
			<color>ffffff</color>
		</image>
		<text name="systemInfo">
			<fontPath>./assets/font_sub.ttf</fontPath>
			<fontSize>0.021</fontSize>
			<alignment>left</alignment>
			<backgroundColor>00000000</backgroundColor>
			<color>fafafa</color>
			<origin>0 0</origin>
			<pos>0.27 0.585</pos>
			<size>0.980 0.050</size>
		</text>
		<!-- Controller -->
		<image name="systemController" extra="true">
			<tile>false</tile>
			<pos>0.70 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.4 0.25</maxSize>
			<path>./assets/systems/${system.theme}_controller.svg</path>
			<color>ffffff</color>
		</image>
		<!-- Selected system title -->
		<image name="system" extra="true">
			<tile>false</tile>
			<zIndex>41</zIndex>
			<origin>0.5 0.5</origin>
			<pos>0.359 0.47</pos>
			<maxSize>0.291 0.20</maxSize>
			<path>./assets/systems/${system.theme}.svg</path>
			<color>ffffff</color>
		</image>
		<!-- System menu -->
		<helpsystem name="help">
			<pos>0.5 0.98</pos>
			<origin>0.5 0.5</origin>
			<textColor>9d9d9d</textColor>
			<iconColor>9d9d9d</iconColor>
			<fontPath>./assets/font_sub.ttf</fontPath>
			<fontSize>0.017</fontSize>
		</helpsystem>
	</view>
	<!--Game list menu -->
	<view name="basic, detailed, video, grid">
		<image name="background">
			<tile>false</tile>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<color>37484f</color>
			<path>./assets/bg_white.png</path>
		</image>
		<image name="logo">
			<path>./assets/systems/${system.theme}.svg</path>
			<pos>0.0208 0.074</pos>
			<origin>0 0.5</origin>
			<maxSize>0.375 0.132</maxSize>
			<color>000000</color>
		</image>
		<text name="md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer, md_lbl_players, md_genre, md_developer, md_players, md_description">
			<pos>1 1</pos>
		</text>
		<datetime name="md_lastplayed, md_releasedate">
			<pos>1 1</pos>
		</datetime>
		<rating name="md_rating">
			<pos>1 1</pos>
		</rating>
		<helpsystem name="help">
			<pos>0.0208 0.98</pos>
			<origin>0 0.5</origin>
			<textColor>9d9d9d</textColor>
			<iconColor>9d9d9d</iconColor>
			<fontPath>./assets/font_sub.ttf</fontPath>
			<fontSize>0.017</fontSize>
		</helpsystem>
	</view>
	<view name="basic, detailed, video">
		<image name="patternShadow" extra="true">
			<tile>false</tile>
			<pos>0.415 0</pos>
			<origin>0 0</origin>
			<size>0.2 1</size>
			<path>./assets/patternwh.png</path>
			<color>000000</color>
			<zIndex>32</zIndex>
		</image>
		<image name="patternMid" extra="true">
			<tile>false</tile>
			<pos>0.400 0</pos>
			<origin>0 0</origin>
			<size>0.2 1</size>
			<path>./assets/patternwh.png</path>
			<color>f7f7f7</color>
			<zIndex>33</zIndex>
		</image>
		<image name="playcircle" extra="true">
			<pos>0.78125 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>0.128125 0</size>
			<path>./assets/playcircle.svg</path>
			<color>4c616d</color>
		</image>
		<image name="videoVignette" extra="true">
			<pos>1 0.5</pos>
			<origin>1 0.5</origin>
			<size>0.5 1</size>
			<path>./assets/vignette_frame.png</path>
			<zIndex>31</zIndex>
		</image>
		<image name="listBG" extra="true">
			<pos>0 0.5</pos>
			<origin>0 0.5</origin>
			<size>0.52 1</size>
			<path>./assets/bottombaseh.png</path>
			<zIndex>34</zIndex>
		</image>
		<textlist name="gamelist">
			<pos>0.0208 0.150</pos>
			<origin>0 0</origin>
			<size>0.49 0.8</size>
			<selectorColor>bc3040</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>9e9da5</primaryColor>
			<secondaryColor>d2505f</secondaryColor>
			<fontPath>./assets/GmarketSansMedium.otf</fontPath>
			<forceUppercase>0</forceUppercase>
			<horizontalMargin>0.01</horizontalMargin>
			<lineSpacing>1.5</lineSpacing>
			<alignment>left</alignment>
			<fontSize>0.03</fontSize>
			<scrollSound>./assets/scroll.wav</scrollSound>
			<selectorHeight>0.0481</selectorHeight>
			<selectorOffsetY>0.00</selectorOffsetY>
			<zIndex>35</zIndex>
		</textlist>
	</view>
	<view name="detailed, video">
		<!-- thumbnail image (box art) -->
		<image name="md_thumbnail">
			<pos>0.5625 0.150</pos>
			<origin>1 0</origin>
			<size>0.21875 0</size>
			<zIndex>36</zIndex>
		</image>
		<image name="md_marquee">
			<pos>0.78125 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.4 0.45</maxSize>
			<zIndex>37</zIndex>
		</image>
		<image name="md_image">
			<pos>0.78125 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>0 1</size>
		</image>
	</view>
	<feature supported="video">
		<view name="video">
			 <video name="md_video">
				<pos>0.7921875 0.5</pos>
				<origin>0.5 0.5</origin>
				<maxSize>1 1</maxSize>
				<delay>0.0</delay>
				<showSnapshotNoVideo>false</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			 </video>
		</view>
	</feature>
	<view name="grid">
		<!-- background -->
		<image name="playcircle" extra="true">
			<pos>0.78125 0.5</pos>
			<origin>0.5 0.5</origin>
			<size>0.128125 0</size>
			<path>./assets/playcircle.svg</path>
			<color>4c616d</color>
			<zIndex>14</zIndex>
		</image>
			 <video name="md_video">
				<pos>0.7921875 0.5</pos>
				<origin>0.5 0.5</origin>
				<maxSize>1 1</maxSize>
				<delay>0.0</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			<zIndex>15</zIndex>
		 </video>
		<image name="videoVignette" extra="true">
			<pos>1 0.5</pos>
			<origin>1 0.5</origin>
			<size>0.5 1</size>
			<path>./assets/vignette_frame.png</path>
			<zIndex>16</zIndex>
		</image>
		<image name="md_marquee">
			<pos>0.78125 0.5</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.4 0.45</maxSize>
			<zIndex>17</zIndex>
		</image>
		<image name="patternShadow" extra="true">
			<tile>false</tile>
			<pos>0.415 0</pos>
			<origin>0 0</origin>
			<size>0.2 1</size>
			<path>./assets/patternwh.png</path>
			<color>000000</color>
			<zIndex>17</zIndex>
		</image>
		<image name="patternMid" extra="true">
			<tile>false</tile>
			<pos>0.400 0</pos>
			<origin>0 0</origin>
			<size>0.2 1</size>
			<path>./assets/patternwh.png</path>
			<color>f7f7f7</color>
			<zIndex>18</zIndex>
		</image>
		<image name="listBG" extra="true">
			<pos>0 0.5</pos>
			<origin>0 0.5</origin>
			<size>0.52 1</size>
			<path>./assets/bottombaseh.png</path>
			<zIndex>19</zIndex>
		</image>
		<image name="patternBottom" extra="true">
			<tile>false</tile>
			<pos>0 0.93</pos>
			<origin>0 0</origin>
			<size>0.52 0.2</size>
			<path>./assets/patternw.png</path>
			<color>f7f7f7</color>
			<zIndex>33</zIndex>
		</image>
		<!--padding LURD -->
		<imagegrid name="gamegrid">
			<pos>0 0.150</pos>
			<size>0.52 1</size>
			<margin>0.005 0.02</margin>
			<padding>0.02 0.01 0 0</padding>
		</imagegrid>
		<gridtile name="default">
			<size>0.12 0.2844444</size>
			<padding>0.0 0.002</padding>
			<imageColor>ffffffa0</imageColor>
			<backgroundColor>ffffff00</backgroundColor>
		</gridtile>
		<gridtile name="selected">
			<size>0.132 0.31288</size>
			<backgroundColor>ffffff00</backgroundColor>
		</gridtile>
	</view>
</theme>